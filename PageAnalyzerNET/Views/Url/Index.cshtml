@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PageAnalyzerNET.ViewModels.PaginatedListViewModel<Url>

<div class="container-lg mt-5">
    <table class="table table-bordered table-hover mt-3">
        <thead>
        <tr>
            <th class="col-1">ID</th>
            <th>Имя</th>
            <th class="col-2">Последняя проверка</th>
            <th class="col-1">Код ответа</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var url in Model)
        {
            <tr>
                <td>@url.Id</td>
                <td>
                    <a asp-action="Show" asp-controller="Url" asp-route-id="@url.Id">@url.Name</a>
                </td>
                <td>@url.CreatedAt</td>
                <td>LastCheck</td>
            </tr>
        }
        </tbody>
    </table>

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-5">
            <li>
                <a asp-action="Index" asp-controller="Url"
                   asp-route-page="@(Model.PageIndex - 1)"
                   class="page-link @prevDisabled">
                    Назад
                </a>
            </li>
            <li>
                <a class="page-link page-item">@Model.PageIndex</a>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Url"
                   asp-route-page="@(Model.PageIndex + 1)"
                   class="page-link @nextDisabled">
                    Вперёд
                </a>
            </li>
        </ul>
    </nav>
</div>