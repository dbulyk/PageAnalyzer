@model Url

<div class="container-lg mt-5">
    <h1>@Model.Name</h1>
    <table class="table table-bordered table-hover mt-3">
        <tbody>
        <tr>
            <td>ID</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Имя</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Дата создания</td>
            <td>@Model.CreatedAt</td>
        </tr>
        </tbody>
    </table>
    <h2 class="mt-5">Проверки</h2>
    <form asp-action="CheckUrl" asp-controller="Url" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-primary">Запустить проверку</button>
    </form>
    <table class="table table-bordered table-hover mt-3">
        <thead>
        <tr>
            <th class="col-1">ID</th>
            <th class="col-1">Код ответа</th>
            <th>Title</th>
            <th>h1</th>
            <th>description</th>
            <th>Дата проверки</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var check in Model.UrlChecks)
        {
            <tr>
                <td>@check.Id</td>
                <td>@check.StatusCode</td>
                <td>@check.Title</td>
                <td>@check.H1</td>
                <td>@check.Description</td>
                <td>@check.CreatedAt</td>
            </tr>
        }

        </tbody>
    </table>
</div>